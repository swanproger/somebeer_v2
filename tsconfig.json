{
    "compilerOptions": {
      "baseUrl": "./src",
      "rootDir": "./src",
      "outDir": "./dist",
      "jsx": "react-jsx",
      "allowJs": true, // временный параметр при миграции с js на ts и tsx , который позволяет компилировать js файлы
      "checkJs": true, // также временный параметр для проверки js файлов
      "target": "es5",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "types": ["images.d.ts"],
      "declaration": true,
      "noEmit": true,
    },
    "include": ["src/**/*", "src/types/images.d.ts`"],
    "exclude": ["node_modules","src/assets/**/*", "src/webpack/", "postcss.config.js",".babelrc"]
  }